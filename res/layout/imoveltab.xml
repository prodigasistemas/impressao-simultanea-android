<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/imovelInformativoLayout">"

            <ImageView
                android:id="@+id/imovelInformativoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/imovelInformativo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="1dp" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtSitLigAgua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Situação Ligação Água:"
                android:textColor="@color/labelColor"
				android:layout_marginTop="5dp"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/sitLigAgua"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="@color/textValueColor" >
            </TextView>

            <TextView
                android:id="@+id/txtSitLigEsgoto:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:text="Situação Ligação Esgoto"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/sitLigEsgoto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="@color/textValueColor" >
            </TextView>

            <LinearLayout
                android:id="@+id/linearLayout13"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_informacoes_usuario"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout11"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtEconomias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="90dp"
                        android:paddingRight="50dp"
                        android:text="Economias:"
                        android:textColor="@color/labelColor"
                        android:textSize="15dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/txtCategoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="90dp"
                        android:text="Categoria:"
                        android:textColor="@color/labelColor"
                        android:textSize="15dp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout12"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/economias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="130dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="70dp"
                        android:paddingLeft="40dp"
                        android:textColor="@color/textValueColor" >
                    </TextView>

                    <TextView
                        android:id="@+id/categoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="lalalala"
                        android:textColor="@color/textValueColor" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtEndereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="170dp"
                android:paddingTop="10dp"
                android:text="Endereço:"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/endereco"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:minWidth="170dp"
                android:textColor="@color/textValueColor" >
            </TextView>

            <TextView
                android:id="@+id/txtNomeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Usuário:"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/nomeUsuario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="@color/textValueColor" >
            </TextView>

            <TextView
                android:id="@+id/txtMatricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matrícula:"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/matricula"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="@color/textValueColor" >
            </TextView>

            <TextView
                android:id="@+id/txtInscricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inscrição:"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/inscricao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="@color/textValueColor" >
            </TextView>

            <TextView
                android:id="@+id/txtSeqRota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seq. Rota:"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/seqRota"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textValueColor" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
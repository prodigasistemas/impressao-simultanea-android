<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/fundocadastro" 
android:orientation="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="horizontal"
		android:id="@+id/imovelCondominialLayout">

		<ImageView
			android:id="@+id/imovelCondominialImage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/condominio"
			android:paddingRight="20dp"
			android:paddingBottom="5dp"
	        android:paddingTop="5dp" />

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:id="@+id/layout">
		
			<TextView
				android:id="@+id/txtImovelCondominial"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18dp"
				android:textColor="@android:color/primary_text_dark"
				android:text="Condomínio:" />

			<TextView
				android:id="@+id/imovelCondominial"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@android:color/primary_text_light_nodisable"
				android:textSize="15dp" />
		</LinearLayout>
         	
	</LinearLayout>
    
    <TextView
        android:id="@+id/txtEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço:"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/labelColor" />

    <TextView
        android:id="@+id/endereco"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:minWidth="170dp"
        android:textColor="@color/textValueColor" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/txtHidrometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hidrômetro:"
            android:paddingRight="10dp"
            android:textColor="@color/labelColor" />

        <TextView
            android:id="@+id/hidrometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textValueColor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/txtLocInstalacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loc. Instalação:"
            android:paddingRight="10dp"
            android:textColor="@color/labelColor" />

        <TextView
            android:id="@+id/locInstalacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textValueColor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/txtLeitura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="Leitura:"
            android:textColor="@color/labelColor" />

        <EditText
            android:id="@+id/leitura"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:ems="5"
            android:inputType="number" >
            <requestFocus></requestFocus>
        </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/txtAnormalidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Anormalidade"
        android:textColor="@color/labelColor" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/codigoAnormalidade"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:ems="5"
            android:inputType="number"
            android:maxLength="2"  >
        </EditText>

        <Spinner
            android:id="@+id/spinnerAnormalidade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
</ScrollView>

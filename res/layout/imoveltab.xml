<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fundocadastro"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtSitLigAgua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Situação Ligação Água:"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/sitLigAgua"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textValueColor" >
            </TextView>

            <TextView
                android:id="@+id/txtSitLigEsgoto:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:text="Situação Ligação Esgoto"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/sitLigEsgoto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textValueColor" >
            </TextView>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtEconomias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="90dp"
                    android:text="Economias:"
                    android:textColor="@color/labelColor"
                    android:textSize="15dp" >
                </TextView>

                <TextView
                    android:id="@+id/txtCodCategoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="90dp"
                    android:text="Código Categoria:"
                    android:textColor="@color/labelColor"
                    android:textSize="15dp" >
                </TextView>

                <TextView
                    android:id="@+id/txtSubcategoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="90dp"
                    android:paddingLeft="10dp"
                    android:text="Subcategoria:"
                    android:textColor="@color/labelColor"
                    android:textSize="15dp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/economias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="90dp"
                    android:textColor="@color/textValueColor" >
                </TextView>

                <TextView
                    android:id="@+id/codCategoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="90dp"
                    android:paddingLeft="50dp"
                    android:textColor="@color/textValueColor" >
                </TextView>

                <TextView
                    android:id="@+id/subcategoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|bottom"
                    android:minWidth="90dp"
                    android:paddingLeft="50dp"
                    android:textColor="@color/textValueColor" >

                    <requestFocus>
                    </requestFocus>
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/txtEndereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="170dp"
                android:text="Endereço:"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/endereco"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:minWidth="170dp"
                android:textColor="@color/textValueColor" >
            </TextView>

            <TextView
                android:id="@+id/txtNomeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Usuário:"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/nomeUsuario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:textColor="@color/textValueColor">
            </TextView>

            <TextView
                android:id="@+id/txtMatricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matrícula:"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/matricula"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:textColor="@color/textValueColor">
            </TextView>

            <TextView
                android:id="@+id/txtInscricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inscrição:"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/inscricao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textValueColor" >
            </TextView>

            <TextView
                android:id="@+id/txtSeqRota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seq. Rota:"
                android:textColor="@color/labelColor"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/seqRota"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>